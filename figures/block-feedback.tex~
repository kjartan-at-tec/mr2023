\documentclass{standalone}
\usepackage[T1]{fontenc}
\usepackage[utf8]{inputenc}
\usepackage{pgf,tikz}
\usepackage{pgfplots}
\pgfplotsset{compat=1.9}

\begin{document}

\begin{tikzpicture}[block/.style={rectangle, draw, minimum width=12mm, minimum height=10mm},
  sumnode/.style={circle, draw, inner sep=1pt},
  node distance=20mm]
  \small 
  \node[coordinate] (input) {};
  \node[block, right of=input] (G) {$G(s)$};
  \node[sumnode, right of=G] (sum2) {$\sum$};
  \node[block, above of=sum2,]  (H) {$1 + H(s)$};
  \node[coordinate, right of=sum2] (output) {};
  \node[coordinate, above of=H, node distance=12mm] (v) {};
 
  \draw[->] (input) -- node[ very near start, above] {$u$} (G);
  \draw[->] (v) -- node[ very near start, left] {$v$} (H);
  \draw[->] (H) --  (sum2);
  \draw[->] (G) -- node[ very near start, above] {} (sum2);
  \draw[->] (sum2) -- node[ very near end, above] {$y$} (output);

\end{tikzpicture}
\end{document}
